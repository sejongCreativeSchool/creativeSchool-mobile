<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    tools:context="com.booreum.view.main.fragment.chat.ChatFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="56dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/chat_notChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="56dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/nothing_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_needer_profile"/>

        <TextView
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="채팅이 없습니다."
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/view_curtain"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="56dp" />


</RelativeLayout>