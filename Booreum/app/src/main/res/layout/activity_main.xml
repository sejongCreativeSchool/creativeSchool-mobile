<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.booreum.view.main.MainActivity"
    app:tabGravity="center"
    android:orientation="vertical"
    android:background="@android:color/white">

    <com.booreum.Custom.Toolbar.MyToolBar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/main_tapLayout"/>


    <com.google.android.material.tabs.TabLayout
        android:elevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabMode="fixed"
        app:tabTextColor="#000000"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        android:background="@drawable/border_tap_layout_blue"
        app:tabRippleColor="@color/needer_blue_dark_selected"
        app:tabUnboundedRipple="true"
        android:id="@+id/main_tapLayout"/>



</androidx.constraintlayout.widget.ConstraintLayout>