<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.booreum.view.main.fragment.category.CategoryFragment"
    android:orientation="horizontal"
    android:columnCount="2"
    android:rowCount="4"
    android:useDefaultMargins="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/category_search"
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/categoty_container"
        android:background="@drawable/border_edittext_blue"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageButton
                android:id="@+id/search_but"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/icon_search"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="15dp"
                android:lines="1"
                android:hint="바로가기 검색"
                android:focusableInTouchMode="false"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/categoty_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintTop_toBottomOf="@id/category_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:layout_constraintRight_toLeftOf="@id/line2"
            app:layout_constraintBottom_toTopOf="@id/line3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/category_bring"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/icon_bring_detail"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="가져다줘"
                android:autoSizeTextType="none"
                android:textColor="@android:color/black"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/line1"
            app:layout_constraintBottom_toTopOf="@id/line4"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/category_buy"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/icon_buy_detail"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="사다줘"
                android:autoSizeTextType="none"
                android:textColor="@android:color/black"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/line4"
            app:layout_constraintBottom_toTopOf="@id/line5"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/category_deliver"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/icon_deliver_detail"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="전달해줘"
                android:autoSizeTextType="none"
                android:textColor="@android:color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintLeft_toRightOf="@id/line3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line6"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/category_submit"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/icon_submit_detail"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="제출해줘"
                android:autoSizeTextType="none"
                android:textColor="@android:color/black"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line5"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/line6"
            app:layout_constraintBottom_toTopOf="@id/line7"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/category_print"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/icon_print_detail"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="프린트해줘"
                android:autoSizeTextType="none"
                android:textColor="@android:color/black"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line6"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/line4"
            app:layout_constraintLeft_toRightOf="@id/line5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line8"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/category_together"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/icon_together_detail"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="같이해줘"
                android:autoSizeTextType="none"
                android:textColor="@android:color/black"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/line7"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/line5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/line8"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/category_instead"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/icon_instead_detail"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="대신해줘"
                android:autoSizeTextType="none"
                android:textColor="@android:color/black"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line8"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/line6"
            app:layout_constraintLeft_toRightOf="@id/line7"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/category_ect"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/icon_etc_detail"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="기타"
                android:autoSizeTextType="none"
                android:textColor="@android:color/black"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>