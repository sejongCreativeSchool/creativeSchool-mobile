<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.booreum.view.main.fragment.category.CategoryFragment"
    android:orientation="horizontal"
    android:columnCount="2"
    android:rowCount="4"
    android:useDefaultMargins="true"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/category_search"
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_edittext_blue"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/category_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/category_bring"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintRight_toLeftOf="@id/category_buy"
            app:layout_constraintBottom_toTopOf="@id/category_deliver"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/icon_bring_detail"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/category_buy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/category_bring"
            app:layout_constraintBottom_toTopOf="@id/category_submit"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/icon_buy_detail"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/category_deliver"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/category_bring"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/category_submit"
            app:layout_constraintBottom_toTopOf="@id/category_print"
            android:src="@drawable/icon_deliver_detail"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/category_submit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/category_buy"
            app:layout_constraintLeft_toRightOf="@id/category_deliver"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/category_together"
            android:src="@drawable/icon_submit_detail"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/category_print"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/category_deliver"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/category_together"
            app:layout_constraintBottom_toTopOf="@id/category_instead"
            android:src="@drawable/icon_print_detail"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/category_together"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/category_submit"
            app:layout_constraintLeft_toRightOf="@id/category_print"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/category_ect"
            android:src="@drawable/icon_together_detail"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/category_instead"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/category_print"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/category_ect"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_instead_detail"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/category_ect"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/category_together"
            app:layout_constraintLeft_toRightOf="@id/category_instead"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_ect_detail"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>