<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/errandSet_parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/needer_blue_setting_layer_1"
    tools:context="com.booreum.view.errandset.ErrandSetActivity">

    <com.booreum.Custom.Toolbar.MyToolBar
        android:id="@+id/errandSet_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title_text="상세조건 검색" />


    <RelativeLayout
        android:id="@+id/errandSet_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="105dp"
        android:background="@drawable/view_container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/errandSet_setErrandLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <com.pm10.library.CircleIndicator
                android:id="@+id/errandSet_indicator"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:p_defaultColor="@color/needer_blue_setting_layer_1"
                app:p_gap="7dp"
                app:p_radius="4dp"
                app:p_selectedColor="@color/needer_blue_dark" />

            <TextView
                android:id="@+id/errandSet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가져다줘"
                android:textColor="#3c3c3c"
                android:textSize="17dp"
                app:layout_constraintBottom_toTopOf="@id/errandSet_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/errandSet_indicator" />

            <ImageView
                android:id="@+id/errandSet_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_bring_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/errandSet_title" />

            <LinearLayout
                android:id="@+id/errandSet_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:paddingLeft="35dp"
                android:paddingTop="35dp"
                android:paddingRight="35dp"
                android:paddingBottom="15dp"
                app:layout_constraintBottom_toTopOf="@id/errandSet_button_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/errandSet_image">

                <com.booreum.Custom.NonSwipeViewpager
                    android:id="@+id/errandSet_viewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/errandSet_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/errandSet_container">

                <Button
                    android:id="@+id/errandSet_button_previous"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/button_custom_blue"
                    android:includeFontPadding="false"
                    android:text="이전"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/errandSet_button_next"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_custom_blue"
                    android:includeFontPadding="false"
                    android:text="다음"
                    android:textSize="24dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>