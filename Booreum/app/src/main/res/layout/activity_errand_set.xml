<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.booreum.view.errandset.ErrandSetActivity"
    android:background="@color/needer_blue_setting_layer_1">

    <com.booreum.Custom.Toolbar.MyToolBar
        android:id="@+id/errandSet_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title_text="상세조건 검색"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/view_container"
        android:orientation="vertical"
        android:layout_marginTop="105dp">
        <com.pm10.library.CircleIndicator
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/errendSet_indicator"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/errandSet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errendSet_indicator"
            app:layout_constraintBottom_toTopOf="@id/errandSet_image"
            android:text="가져다줘"
            android:textColor="@android:color/black"
            android:textSize="21dp"/>
        <ImageView
            android:id="@+id/errandSet_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/icon_bring_detail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errandSet_title"/>
        <LinearLayout
            android:id="@+id/errandSet_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errandSet_image"
            app:layout_constraintBottom_toTopOf="@id/errendSet_button"
            android:padding="30dp">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/errendSet_viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/needer_blue_setting_layer_1"/>
        </LinearLayout>

        <Button
            android:id="@+id/errendSet_button"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errandSet_container"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="35dp"
            android:background="@drawable/button_custom_blue"
            android:includeFontPadding="false"
            android:text="다음"
            android:textSize="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>