<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- selector가 눌렸을때 -->
    <item
        android:state_focused="true"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="12dp"
                android:topRightRadius="12dp" />
            <stroke
                android:width="2dp"
                android:color="?attr/needer_blue_dark" />
        </shape>

    </item>

    <!-- selector가 눌리지 않았을때 -->
    <item
        android:state_focused="false"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="rectangle">

            <solid android:color="#e2e2e2"/>
            <corners
                android:bottomLeftRadius="12dp"
                android:topRightRadius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#a9a9a9" />
        </shape>

    </item>

</selector>