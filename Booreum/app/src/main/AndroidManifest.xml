<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.booreum.booreum">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_needer"
        android:usesCleartextTraffic="true">
        <activity android:name="com.booreum.view.chatdetail.ChatDetailActivity"></activity>
        <activity android:name="com.booreum.view.webview.WebViewActivity"></activity>
        <activity android:name="com.booreum.view.errandcheck.CheckErrandActivity" />
        <activity
            android:name="com.booreum.view.errandset.ErrandSetActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.booreum.view.signup.SignUpActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.booreum.view.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.booreum.view.main.MainActivity"
            android:windowSoftInputMode="adjustResize"></activity>
    </application>

</manifest>